<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 3rem;
    display: flex;
    align-items: center;
  }
</style>

<!-- FILTER BAR -->
<div id="filters" class="mt-4 mb-3">
  <a href="/listings/search?q=trending" class="filter text-decoration-none text-dark">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </a>
  <a href="/listings/search?q=rooms" class="filter text-decoration-none text-dark">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </a>
  <a href="/listings/search?q=city" class="filter text-decoration-none text-dark">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Iconic Cities</p>
  </a>
  <a href="/listings/search?q=mountain" class="filter text-decoration-none text-dark">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </a>
  <a href="/listings/search?q=castle" class="filter text-decoration-none text-dark">
    <i class="fa-solid fa-fort-awesome"></i>
    <p>Castles</p>
  </a>
  <a href="/listings/search?q=pool" class="filter text-decoration-none text-dark">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Amazing Pools</p>
  </a>
  <a href="/listings/search?q=camp" class="filter text-decoration-none text-dark">
    <i class="fa-solid fa-campground"></i>
    <p>Camping</p>
  </a>
  <a href="/listings/search?q=farm" class="filter text-decoration-none text-dark">
    <i class="fa-solid fa-cow"></i>
    <p>Farms</p>
  </a>
  <a href="/listings/search?q=dome" class="filter text-decoration-none text-dark">
    <i class="fa-solid fa-igloo"></i>
    <p>Domes</p>
  </a>
  <a href="/listings/search?q=boat" class="filter text-decoration-none text-dark">
    <i class="fa-solid fa-ship"></i>
    <p>Boats</p>
  </a>

  <!-- âœ… TAX TOGGLE -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault">
        Display Total After Taxes
      </label>
    </div>
  </div>
</div>

<!-- LISTINGS GRID -->
<% if (listings && listings.length) { %>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% listings.forEach(item => { %>
      <a href="/listings/<%= item._id %>" class="listing-link text-decoration-none">
        <div class="card col listing-card">
          <img
            src="<%= item.image?.url || item.image %>"
            class="card-img-top"
            alt="<%= item.title %>"
            style="height: 20rem"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= item.title %></b><br />
              <%= item.location %><br />
              &#8377; <%= item.price?.toLocaleString("en-IN") || "N/A" %> /night
              <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% }) %>
  </div>
<% } else { %>
  <p class="mt-4">No destinations found.</p>
<% } %>

<!-- SCRIPT: TAX TOGGLE -->
<script>
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch?.addEventListener("click", () => {
    document.querySelectorAll(".tax-info").forEach(el => {
      el.style.display = el.style.display === "inline" ? "none" : "inline";
    });
  });
</script>
